  <div class="col-md-8 display-flex justify-space-between m-2 p-3" style="background-color:var(--secondDarkest)">
    <h2 >
      <a href="/topic/{{topic.id}}">{{topic.title}}</a>
    </h2>
    <p>Created by you on {{format_date topic.date_created}}</p>
  </div>
  <div class="col-md-8 p-3" style="background-color:var(--darkest);" >
    {{topic.post_body}}
  </div>
</div>
{{/each}}


