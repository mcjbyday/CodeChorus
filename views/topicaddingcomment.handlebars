<div class="text-center">
  <h2>{{title}}</h2>
  {{!-- <p>{{{get_emoji}}}</p> --}}
  <p>{{post_body}}</p>
  <p>Created by {{User.name}} on {{format_date date_created}}</p>
  <div class="row mt-4">
    <div class="col-3"></div>
    <div class="justify-content-center align-self-center col-6">
      <h3>Add your comment:</h3>
      <form class="form new-comment-form">
        <div class="form-group">
          <label for="comment-body">Comment:</label>
          <textarea class="form-input" id="comment-body" name="comment-body"></textarea>
          <input type="hidden" value="{{id}}" name="post-id"> 
        </div>
        <div class="form-group">
          <button type="submit" class="btn btn-primary" id="createCommentBtn">Post</button>
        </div>
      </form>
    </div>
    <div class="col-3"></div>
  </div>
  
</div>

<script src="/js/topicaddcomment.js"></script>
