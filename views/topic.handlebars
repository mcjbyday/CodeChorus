<div class="align-center topic display-flex flex-column p-3">
  <div class="text-center col-md-8 display-flex justify-space-between m-2 p-3"
    style="background-color:var(--secondDarkest)">
    <h2>{{title}}</h2>
    <p>Created by {{User.name}} on {{format_date date_created}}</p>
    {{!-- <p>{{{get_emoji}}}</p> --}}
  </div>
  <div class="col-md-8 p-3" style="background-color:var(--darkest);">
    <p>{{post_body}}</p>
  </div>
</div>
{{#if Comments.length}}
{{#each Comments as |comment| }}
<div class="display-flex">
  <div class="col-3"></div>
  <div class="text-center col-md-6 comment display-flex justify-space-between m-2 p-1"
    style="background-color:var(--darkest);">

    <p>
      {{comment.comment_body}}
    </p>


    <p style="font-size:small;">Posted by {{comment.User.name}} on {{format_date comment.date_created}}</p>

  </div>
  <div class="col-3"></div>
</div>
{{/each}}
{{/if}}

<div class="display-flex justify-space-evenly align-items-center">
  <div class="col-3"></div>
  {{#if logged_in}}
  {{#equality_test User.id thisUser}}
    <p class="align-items-center col-2">
      <button class="btn btn-primary" id="commentTopicBtn" data-id="{{id}}">Comment</button>
    </p>
    <p class="align-items-center col-2">
      <button class="btn btn-secondary" id="editTopicBtn" data-id="{{id}}">Edit post</button>
    </p>
    <p class="align-items-center col-2">
      <button class="btn btn-danger" id="deleteTopicBtn" data-id="{{id}}">Delete this topic</button>
    </p>
  {{else}}
      <p class="align-items-center col-6">
        <button class="btn btn-primary" id="commentTopicBtn" data-id="{{id}}">Comment</button>
      </p>
  {{/equality_test}}
  
  {{else}}
  <a class="col-3" href="/login">
    <button class="btn btn-primary">Login to comment on topics like this!</button>
  </a>
  {{/if}}
  <div class="col-6"></div>
</div>


<script src="/js/topic.js"></script>