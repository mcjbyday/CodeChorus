<div class="text-center">
  <h2>{{title}}</h2>
  {{!-- <p>{{{get_emoji}}}</p> --}}
  <p>{{post_body}}</p>
  <p>Created by {{user.name}} on {{format_date date_created}}</p>
  {{#if Comments.length}}
    {{#each Comments as |comment| }}
    <div class="row mb-4 comment">
      <div class="col-md-7">
        <p>
          {{comment.comment_body}}
        </p>
      </div>
      <div class="col-md-5">
        <p>Posted by {{comment.User.name}} on {{format_date comment.date_created}}</p>
      </div>
    </div>
    {{/each}}
  {{/if}}
  {{#if logged_in}}
    <p>
      <button class="btn btn-primary" id="commentTopicBtn" data-id="{{id}}">Comment on this topic</button>
    </p>
  {{!-- {{#if }}
    <p> 
      <button class="btn btn-secondary" id="editTopicBtn" data-id="{{id}}">Edit this post's content</button>
    </p> --}}
  {{!-- {{/if }} --}}
  {{else}}
    <a href="/login">
      <button class="btn btn-primary" >Login to comment on topics like this!</button>
    </a>
  {{/if}}
</div>

<script src="/js/topic.js"></script>